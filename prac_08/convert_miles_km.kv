BoxLayout: # red box
    orientation: 'vertical'
    BoxLayout: # blue box
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 30
#            size_hint_y: 1
            multiline: False
        BoxLayout: # Green box
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 30
                size_hint_y: 0.5
                on_press: app.handle_up(input_number.text)
            Button:
                text: 'Down'
                font_size: 30
                size_hint_y: 0.5
                on_press: app.handle_down(input_number.text)

    Button: # inside red box
        text: 'Convert m to km'
        font_size: 30
        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
